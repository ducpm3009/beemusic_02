<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewModel"
            type="ducpm.framgia.com.beemusic.screen.song.ItemSongViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_2"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:onClick="@{viewModel::onSongClicked}"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image_song_art"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center"
                bind:imageResource="@{viewModel.songArtwork}"
                />

            <LinearLayout
                android:layout_width="@dimen/dp_290"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                >

                <TextView
                    android:id="@+id/text_song_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.songTitle}"
                    />

                <TextView
                    android:id="@+id/text_song_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.songAlbum}"
                    />

                <TextView
                    android:id="@+id/text_song_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.songArtist}"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@{viewModel.songFav ? @drawable/ic_star :@drawable/ic_star_n}"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>
